{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
   
        {
            "name": "Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/dist/src/index.js",
            "args": [
                ""
            ],
            "env":{
                "DEBUG":"express:*"            
            },
            "cwd": "${workspaceRoot}",
            "outputCapture": "std",
            "protocol": "inspector"
            
        },
        {
            "name": "Debug ts",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
            "args": [
                "-r",
                "tsconfig-paths/register",
                "src/index.ts"
            ],
            "env":{
                "DEBUG":"express:*"            
            },
            "cwd": "${workspaceRoot}",
            "outputCapture": "std",
            "protocol": "inspector"
            
        },
        {
            "name": "DebugTs(watch)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable":"${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "args": [  
                "--watch",
                "src",
                "src/index.ts"
            ],
            "env":{
                "DEBUG":"express:*"            
            },
            "cwd": "${workspaceRoot}",
                     
            "protocol": "inspector"
            
        },        
        {
            "name": "Debug current TS File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
            "args": [
                "${file}"
            ],
            "env":{
                "DEBUG":"*"            
            },
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ]
}