    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ts",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
            "args": [
                "src/index.ts"
            ],
            "env":{
                "DEBUG":"express:*"            
            },
            "cwd": "${workspaceRoot}",
            "outputCapture": "std",
            "protocol": "inspector"
            
        },
        {
            "name": "Debug current TS File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
            "args": [
                "${file}"
            ],
            "env":{
                "DEBUG":"*"            
            },
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
    ]
}